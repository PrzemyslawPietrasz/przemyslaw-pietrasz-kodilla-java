SELECT U.ID,U.SUMMARY,U.DESCRIPTION,P.NAME
FROM ISSUES U
         JOIN ISSUESLISTS P ON U.ID = P.ID;

SELECT U.ID,U.SUMMARY,U.DESCRIPTION,P.FIRSTNAME,P.LASTNAME
FROM ISSUES U
         JOIN USERS P ON U.ID = P.ID;

SELECT USERS.FIRSTNAME, USERS.LASTNAME, COUNT(ISSUES.ID) AS TASKS
FROM USERS
JOIN ISSUES ON ISSUES.USER_ID_ASSIGNEDTO = USERS.ID
GROUP BY USERS.ID;